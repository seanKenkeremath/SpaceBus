<resources>

    <style name="SpaceTheme" parent="android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:buttonStyle">@style/default_button</item>
    </style>

    <style name="default_button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/default_button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="MenuPanel">
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/menu_button_padding</item>
        <item name="android:background">@android:drawable/alert_dark_frame</item>
    </style>

</resources>